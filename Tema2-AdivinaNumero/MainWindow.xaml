        <Button x:Name="comprobarBoton" Content="Comprobar" HorizontalAlignment="Left" Margin="187,208,0,0" VerticalAlignment="Top" Width="129" Height="35" Click="comprobarBoton_Click"/>
        <Button x:Name="reiniciarBoton" Content="Reiniciar" HorizontalAlignment="Left" Margin="373,208,0,0" VerticalAlignment="Top" Width="129" Height="35" Click="reiniciarBoton_Click"/>

    </Grid>
</Window>
